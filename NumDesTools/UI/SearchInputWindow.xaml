<Window
    x:Class="NumDesTools.UI.SearchInputWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="输入查找关键词"
    Width="300"
    Height="150"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Margin="0,0,0,10" Text="请输入查找关键词：不填则表示加载全部表格" />
        <TextBox
            x:Name="SearchTextBox"
            Grid.Row="1"
            Height="30"
            Margin="0,5,0,10" />
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal" />
        <Button
            Grid.Row="1"
            Margin="213,44,-3,-44"
            Click="OkButton_Click"
            Content="查找"
            RenderTransformOrigin="0.539,1.656" />
    </Grid>
</Window>