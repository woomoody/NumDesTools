<UserControl
    x:Class="NumDesTools.UI.ImagePreviewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NumDesTools.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="PathTextBlockStyle" TargetType="TextBlock">
            <Setter Property="TextDecorations" Value="Underline" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Blue" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  图片列表  -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding ImageItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Padding="3"
                            BorderBrush="LightGray"
                            BorderThickness="1">
                            <StackPanel>
                                <Image
                                    Width="150"
                                    Height="100"
                                    Cursor="Hand"
                                    Source="{Binding Thumbnail}"
                                    ToolTip="双击选择图片" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding ImageId}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding ImageContent}" 
                                    ToolTip="{Binding ImageContent}" />
                                <TextBlock
                                    Width="150"
                                    Cursor="Hand"
                                    FontSize="10"
                                    Foreground="White"
                                    MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                                    Style="{StaticResource PathTextBlockStyle}"
                                    Text="{Binding ImagePath}"
                                    TextTrimming="CharacterEllipsis"
                                    ToolTip="{Binding ImagePath}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
